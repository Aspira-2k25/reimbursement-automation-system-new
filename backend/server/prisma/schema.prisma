// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Database connection configuration for Prisma Postgres:
// - url: Uses Prisma Accelerate connection (prisma+postgres://) for runtime queries
// - directUrl: Uses direct postgres:// connection for migrations only
datasource db {
  provider  = "postgresql"
  url       = env("DB_PRISMA_DATABASE_URL")
  directUrl = env("DB_POSTGRES_URL")
}

// Staff Table (Faculty, HOD, Coordinator, Principal)
model Staff {
  id          Int       @id @default(autoincrement())
  username    String    @unique @db.VarChar(100)
  password    String    @db.VarChar(100)
  email       String    @unique @db.VarChar(100)
  role        String?   @db.VarChar(50)
  name        String?   @db.VarChar(100)
  department  String?   @db.VarChar(50)
  employee_id String?   @db.VarChar(50)
  is_active   Boolean   @default(true)
  last_login  DateTime? @map("last_login")
  created_at  DateTime  @default(now()) @map("created_at")
  updated_at  DateTime  @updatedAt @map("updated_at")

  @@map("staff")
  @@index([username])
  @@index([email])
  @@index([department])
}
